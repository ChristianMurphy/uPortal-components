{
  "name": "@uportal/open-id-connect",
  "description": "A shared Open ID Connect authorization helper for uPortal",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uPortal-contrib/uPortal-web-components.git"
  },
  "files": [
    "esm/open-id-connect.js",
    "node/open-id-connect.js",
    "global/open-id-connect.js",
    "global/open-id-connect.min.js"
  ],
  "main": "node/open-id-connect.js",
  "module": "esm/open-id-connect.js",
  "browser": "global/open-id-connect.min.js",
  "keywords": [
    "apereo",
    "uportal",
    "open",
    "id",
    "connect",
    "oidc"
  ],
  "author": "Apereo <uportal-dev@apereo.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/uPortal-contrib/uPortal-web-components/issues"
  },
  "homepage": "https://uportal-contrib.github.io/uPortal-web-components/",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "clean": "rimraf -rf global node",
    "build": "npm-run-all clean build:*",
    "build:node": "babel esm/open-id-connect.js -d node",
    "build:global": "browserify esm/open-id-connect.js -o global/open-id-connect.js -t [ babelify --presets [ \"@babel/preset-env\" ] ]",
    "build:global-min": "browserify esm/open-id-connect.js -o global/open-id-connect.min.js -p tinyify -t [ babelify --presets [ \"@babel/preset-env\" ] ]",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "jwt-decode": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-0",
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.0.0-0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.0.0",
    "babelify": "^9.0.0",
    "browserify": "^16.2.2",
    "eslint-plugin-jest": "^21.15.1",
    "jest": "^23.0.0",
    "npm-run-all": "^4.1.3",
    "tinyify": "^2.4.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "test": true,
      "expect": true
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "targets": {
            "node": "6"
          }
        }
      ]
    ]
  }
}
